<h1><%= @restaurant.name %></h1>

<p>Address: <%= @restaurant.address %></p>
<p>Phone-number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
<p><%= link_to "Ratings", restaurant_reviews_path(@restaurant) %></p>

<%= link_to "Add rating", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
<%= link_to "All Restaurants", "/restaurants", class: "btn btn-success" %>
<%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-success" %>
<%= link_to "Delete", restaurant_path(@restaurant), class: "btn btn-success", method: :delete %>
