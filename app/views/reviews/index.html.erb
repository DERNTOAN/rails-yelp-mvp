<h1><%= @restaurant.name %></h1>
<h2>Ratings</h2>
<ul>
  <% @reviews.each do |review| %>
    <li><%= review.content %> - Rating: <%= review.rating %></li>
  <% end %>
</ul>

<%= link_to "Add rating", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
<%= link_to "Back to Restaurant", restaurant_path(@restaurant), class: "btn btn-success" %>
